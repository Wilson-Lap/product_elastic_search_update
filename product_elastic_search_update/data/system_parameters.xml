<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- API 100p.xcs.be Base URL -->
        <record id="api_100p_base_url" model="ir.config_parameter">
            <field name="key">api_100p.base_url</field>
            <field name="value">https://api.100p.xcs.be/api/v1</field>
        </record>

        <!-- API 100p.xcs.be Bearer Token -->
        <record id="api_100p_bearer_token" model="ir.config_parameter">
            <field name="key">api_100p.bearer_token</field>
            <field name="value">YOUR_BEARER_TOKEN_HERE</field>
        </record>

        <!-- API 100p.xcs.be Timeout (seconds) -->
        <record id="api_100p_timeout" model="ir.config_parameter">
            <field name="key">api_100p.timeout</field>
            <field name="value">30</field>
        </record>

        <!-- Auto-update product name from API description -->
        <record id="api_100p_auto_update_name" model="ir.config_parameter">
            <field name="key">api_100p.auto_update_name</field>
            <field name="value">True</field>
        </record>

        <!-- Auto-update product price from API dealer price -->
        <record id="api_100p_auto_update_price" model="ir.config_parameter">
            <field name="key">api_100p.auto_update_price</field>
            <field name="value">True</field>
        </record>

        <!-- Auto-update product weight from API net weight -->
        <record id="api_100p_auto_update_weight" model="ir.config_parameter">
            <field name="key">api_100p.auto_update_weight</field>
            <field name="value">True</field>
        </record>
    </data>
</odoo>