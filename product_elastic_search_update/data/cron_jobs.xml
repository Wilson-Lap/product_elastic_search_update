<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron job pour synchroniser automatiquement les produits depuis l'API 100p -->
        <record id="cron_update_products_from_api_100p" model="ir.cron">
            <field name="name">Update Products from API 100p</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="code">model.cron_update_products_from_api()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active">False</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="doall">False</field>
        </record>
    </data>
</odoo>